{
    "swagger": "2.0",
    "info":{
        "title": "API Ecommerce Technology",
        "description": "En esta API puede acceder a los endpoint del Ecommerce Technology, a la vez controlar los datos, loguearse a las rutas protejidas e interactuar con el backend",
        "contact": {
            "name": "Equipo tecnico Ecommerce",
            "responsibleDeveloper": "Stefano, Gonzalo, David",
            "email": "technologyecommerce2@gmail.com"
        },
        "version": "1.0"
    },
    "externalDocs": {
        "description": "Mas acerca de la API Ecommerce",
        "url": "https://github.com/Davidmenq/ecommerce_Codigo_Backend#readme"
      },
    "schemes": ["http", "https"],
    "definitions": {
        "Categoria":{
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "nombre": {
                    "type": "string",
                    "example": "Perifericos"
                },
                "fechaCreacion":{
                    "type": "string",
                    "example": "2023-08-04T23:59:59"
                },
                "imagen":{
                    "type": "string",
                    "example": "https://google.com"
                }

            }
        },
        "Usuario": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": "1"
                },
                "nombre": {
                    "type": "string",
                    "example": "Usuario01"
                },
                "correo": {
                    "type": "string",
                    "example": "correo@correo.com"
                },
                "tipoUsuario": {
                    "type": "string",
                    "example": "ADMIN"
                },
                "birthday": {
                    "type": "string",
                    "example": "2020-01-08"
                },
                "fechaCreacion": {
                    "type": "string",
                    "example": "2020-01-08T23:59:59"
                }
            }
        },
        "Producto": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": "1"
                },
                "nombre": {
                    "type": "string",
                    "example": "teclado"
                },
                "descripcion": {
                    "type": "string",
                    "example": "descripcion del producto"
                },
                "precio": {
                    "type": "number",
                    "example": "30.50"
                },
                "imagenes": {
                    "type": "array",
                    "example": "[]"
                },
                "disponibilidad": {
                    "type": "boolean",
                    "example": "true"
                },
                "categoriaId": {
                    "type": "integer",
                    "example": "1"
                },
                "stock": {
                    "type": "integer",
                    "example": "10"
                }
            }
        },
        "Pedido": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": "1"
                },
                "fechaCreacion": {
                    "type": "string",
                    "example": "2020-01-08T23:59:59"
                },
                "total": {
                    "type": "number",
                    "example": "150.50"
                },
                "usuarioId": {
                    "type": "integer",
                    "example": "1"
                }
            }
        }
    },
    "securityDefinitions":{
        "Bearer": {
            "type": "apiKey",
            "name": "authorization",
            "in": "header",
            "description": "Por favor, utilizar el siguiente formato: Bearer <YOUR_TOKEN>"
        
        }
    }
} 